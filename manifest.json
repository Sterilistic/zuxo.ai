{
  "manifest_version": 3,
  "name": "Page Saver",
  "key":"ejbdlaldfpoiklmgfhicfobpgdhidhbj",
  "version": "1.0",
  "description": "Save web pages with a floating button and keyboard shortcuts",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "commands",
    "identity",
    "bookmarks"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Ctrl+Shift+S"
      },
      "description": "Save the current page"
    }
  }
} 