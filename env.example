# LinkedIn OAuth Configuration
# For Extension (frontend) - these go in your .env file for the extension
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_REDIRECT_URI=https://your_extension_id.chromiumapp.org/auth/callback
LINKEDIN_AUTH_SCOPE=r_liteprofile r_emailaddress r_member_social
LINKEDIN_RESPONSE_TYPE=code

# For Backend Server - these go in your backend .env file
# LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/content_saver

# Server Configuration
PORT=3000 