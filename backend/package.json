{
  "name": "page-saver-backend",
  "version": "1.0.0",
  "description": "Backend API for page saver Chrome extension",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy:assets",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "ts-node-dev src/server.ts",
    "build:frontend": "tsc src/public/js/dashboard.ts --outDir dist/public/js --target ES2020 --lib ES2020,DOM",
    "copy:assets": "mkdir -p dist/views dist/public/css dist/public/js && cp -r src/views/* dist/views/ && cp -r src/public/css/* dist/public/css/ && cp -r src/public/js/* dist/public/js/"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "mongodb": "^5.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/node": "^18.16.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}